name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    # KÃ¸r jobbet i en Docker-in-Docker container med Docker CLI og daemon
    container:
      image: docker:24.0.5-dind
      options: --privileged
    services:
      docker:
        image: docker:24.0.5-dind
        privileged: true
        options: --privileged

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Docker Buildx
        uses: docker/setup-buildx-action@v2

      - name: Build Docker image
        run: |
          docker build -t my-ros-app .
